{% extends 'Template.twig' %}

{% block content %}

    <nav class="navbar dark navbar-solid-transition">
        <div class="nav-wrapper">
            <a href="{{ path_for("home") }}" class="brand-logo"><img src="/images/logo.jpg" height="64px" /></a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="{{ path_for("whoareus") }}">Qui somme nous ?</a></li>
                <li><a href="{{ path_for("devis") }}">Devis</a></li>
                <li><a href="#contact_form">Contact</a></li>
            </ul>

            <ul id="slide-out" class="side-nav">
                <li class="no-padding">
                    <ul class="collapsible collapsible-accordion">
                        <li class="bold">
                            <a class="collapsible-header waves-effect waves-teal active">Accueil</a>
                        </li>
                    </ul>
                </li>
                <li><a href="{{ path_for("whoareus") }}">Qui somme nous ?</a></li>
                <li><a href="{{ path_for("devis") }}">Devis</a></li>
                <li><a href="#contact_form">Contact</a></li>
            </ul>

            <a href="#" data-activates="slide-out" class="button-collapse right"><i class="material-icons black-text">menu</i></a>
        </div>
    </nav>

    <div class="header shuffle-over-transition">
        <div class="background black-bg"></div>
        <div class="header-wrapper row valign-wrapper">
            <div class="col s12">
                <h1 style="color: #FFF;">La Ruche</h1>
                <span class="tagline">Espace administrateur</span>
                <button class="read-more"><i class="icon-caret-down"></i></button>
            </div>
        </div>
    </div>

    <div class="section black valign-wrapper shuffle-over-transition">
        <div class="container">
            <div class="row">
                <div class="col s12"><h2 class="section-title">Connexion</h2></div>
                <form action="{{ path_for('connection') }}" method="post">
                    <div class="input-field col s12">
                        <input id="Identifiant" type="email" name="email">
                        <label for="Identifiant">Identifiant</label>
                    </div>
                    <div class="input-field col s12">
                        <input id="password" type="password" name="password">
                        <label for="password">Mot de passe</label>
                    </div>
                    <button type="submit" class="waves-effect waves-light btn btn-global-style">Se connecter</button>
                </form>
            </div>
        </div>
    </div>




{% endblock %}